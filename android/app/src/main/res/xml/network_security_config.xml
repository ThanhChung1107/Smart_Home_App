<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- CHO PHÉP HTTP CHO TẤT CẢ MẠNG -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- CHO PHÉP IP CỤ THỂ -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- ESP32-CAM IP (mới) -->
        <domain includeSubdomains="true">172.20.10.7</domain>

        <!-- ESP8266 Door Control IP -->
        <domain includeSubdomains="true">172.20.10.2</domain>

        <!-- Django Backend (nếu có) -->
        <domain includeSubdomains="true">10.73.58.26</domain>

        <!-- Localhost for testing -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
</network-security-config>
